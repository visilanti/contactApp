<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">
              Tambah Data Contact
            </a>

            <% if (msg.length !== 0){ %>
              <div class="alert alert-success" role="alert">
                <%= msg %>
              </div>
            <% } %>
            
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Handphone</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(contacts.length === 0) {%>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">
                          &laquo; Data Kontak Masih Kosong!
                      </td>
                    </tr>
                  </div>
                  <% } %>
                  <% contacts.forEach((contact, i) => { i++%>
                  <tr>
                    <th scope="row"><%= i++ %></th>
                    <td><%= contact.firstName %> <%= contact.lastName%></td>
                    <td><%= contact.noHP %></td>
                    <td>
                        <a href="/contact/<%= contact.nama %>" class="badge rounded-pill btn btn-success"><i class="bi bi-info-circle"></i>
                            detail
                        </a>
                        <!-- <a href="/delete-contact/<%= contact.nama %>" class="badge rounded-pill btn btn-danger"><i class="bi bi-trash"></i>
                          Hapus
                      </a> -->
                      <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                        <input type="hidden" name="nama" value="<%= contact.nama%>">
                        <button type="submit" class="badge rounded-pill btn btn-danger"><i class="bi bi-trash">Hapus</i></button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
        </div>
    </div>
</div>