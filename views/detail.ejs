<div class="container mt-e">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <div class="card" style="width: 18rem;">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <% if (contact) { %>
                            <h5 class="card-title"><%= contact.nama %></h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHP %></h6>
                            <p class="card-text"><%= contact.email %></p>
                        <% } else { %>
                            <div class="alert alert-danger fw-bold" role="alert">
                                &laquo; Kembali ke daftar contact
                            </div>
                        <% } %>
                        <a href="/contact" class="card-link">&laquo; Kembali </a>
                    </div>
                </div>                
        </div>
    </div>
</div>